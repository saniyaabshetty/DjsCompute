<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.djscompute.djscompute.PaymentActivity">

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="599dp"
        android:layout_height="119dp"
        android:layout_marginTop="4dp"
        android:ems="54"
        android:inputType="text"
        android:rotationX="2"
        android:selectAllOnFocus="true"
        android:text="Your Plans"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="2dp" />

    <com.google.android.material.chip.ChipGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="95dp"
        tools:layout_editor_absoluteY="82dp">

    </com.google.android.material.chip.ChipGroup>

    <Button
        android:id="@+id/button"
        android:layout_width="398dp"
        android:layout_height="67dp"
        android:background="@drawable/ic_launcher_background"
        app:backgroundTint="#B5B2B2"
        tools:layout_editor_absoluteX="11dp"
        tools:layout_editor_absoluteY="337dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="201dp"
        android:layout_height="54dp"
        android:text="Card Number"
        android:textColor="#8A8585"
        android:textSize="34sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="442dp" />

    <androidx.constraintlayout.widget.Barrier
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expiry Date"
        android:textColor="#938F8F"
        android:textSize="34sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="632dp" />

    <EditText
        android:id="@+id/editTextTextMultiLine"
        android:layout_width="593dp"
        android:layout_height="187dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:text="Premium Offer"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="128dp"
        tools:textSize="24sp" />

    <EditText
        android:id="@+id/editTextText2"
        android:layout_width="553dp"
        android:layout_height="64dp"
        android:background="@drawable/input_bg"
        android:ems="10"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:paddingRight="30dp"
        android:text="Card Number"
        android:textColor="#888888"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="527dp" />

    <EditText
        android:id="@+id/editTextText3"
        android:layout_width="194dp"
        android:layout_height="66dp"
        android:background="@drawable/input_bg"
        android:ems="10"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:paddingRight="30dp"
        android:text="MM/YY"
        android:textColor="#939191"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="711dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Security code"
        android:textColor="#A8A4A4"
        android:textSize="34sp"
        tools:layout_editor_absoluteX="367dp"
        tools:layout_editor_absoluteY="632dp" />

    <EditText
        android:id="@+id/editTextText4"
        android:layout_width="207dp"
        android:layout_height="61dp"
        android:background="@drawable/input_bg"
        android:ems="10"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:paddingRight="30dp"
        android:text="    CVV"
        android:textColor="#938C8C"
        tools:layout_editor_absoluteX="367dp"
        tools:layout_editor_absoluteY="711dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zip Code"
        android:textColor="#B5B2B2"
        android:textSize="34sp"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="836dp" />

    <EditText
        android:id="@+id/editTextText5"
        android:layout_width="549dp"
        android:layout_height="68dp"
        android:background="@drawable/input_bg"
        android:ems="10"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:paddingRight="30dp"
        android:text="Enter Zip Code"
        android:textColor="#A19D9D"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="905dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="276dp"
        android:layout_height="72dp"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:text="Subscribe"
        android:textSize="24sp"
        app:backgroundTint="#2196F3"
        app:rippleColor="#2196F3"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="1005dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$"
        android:textColor="#AFAFAF"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="203dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel Anytime"
        android:textColor="#A3A3A3"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="11dp"
        tools:layout_editor_absoluteY="266dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9.99"
        android:textSize="48sp"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="191dp"
        tools:textStyle="bold" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="3dp"
        android:text="Offer terms"
        android:textColor="#2196F3"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="121dp"
        tools:layout_editor_absoluteY="266dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="6dp"
        android:text="apply."
        android:textColor="#9F9898"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="206dp"
        tools:layout_editor_absoluteY="266dp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/month"
        android:textColor="#B5B2B2"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="121dp"
        tools:layout_editor_absoluteY="213dp"
        tools:textStyle="bold" />

    <Button
        android:id="@+id/button4"
        android:layout_width="157dp"
        android:layout_height="60dp"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:text="Credit Card"
        android:textSize="20sp"
        app:backgroundTint="#B5B2B2"
        tools:backgroundTintMode="multiply"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="339dp"
        tools:textColor="#817D7D"
        tools:textSize="20sp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="157dp"
        android:layout_height="60dp"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:text="Paypal"
        android:textColor="#817D7D"
        android:textSize="20sp"
        app:backgroundTint="#B5B2B2"
        app:backgroundTintMode="multiply"
        tools:layout_editor_absoluteX="226dp"
        tools:layout_editor_absoluteY="341dp" />

</androidx.constraintlayout.widget.ConstraintLayout>